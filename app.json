{
  "expo": {
    "name": "FACTS",
    "slug": "facts",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.facts.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "FACTS utilise la caméra pour capturer des images à vérifier.",
        "NSPhotoLibraryUsageDescription": "FACTS accède à votre galerie pour sélectionner des images à vérifier."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.facts.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "FACTS accède à votre galerie pour sélectionner des images à vérifier.",
          "cameraPermission": "FACTS utilise la caméra pour capturer des images à vérifier."
        }
      ],
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "facts-app"
      }
    }
  }
}
